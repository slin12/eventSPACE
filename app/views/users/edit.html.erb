<h1>Edit Profile</h1>
<br>
<%= form_for @current_user do |f|  %>
    <%= f.label :profile, "Profile Photo" %>
    <%= f.file_field :profile %><br>
    <%= f.label :name, "Name" %><br>
    <%= f.text_field :name %><br>
    <%= f.label :birthday, "Birthday" %><br>
    <%= f.date_field :birthday %><br>
    <%= f.label :bio, "Tell us about yourself."%><br>
    <%= f.text_area :bio %><br>
    <%= f.password_field :password%>
    <br>
    <%= f.submit "Save", class: "btn waves-effect waves-light cyan lighten-1"%>
  <% end %>
